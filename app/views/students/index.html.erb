<% if user_signed_in? %>


<div class='container-fluid'>
    <h3 class=''>Students List</h3>
      <table class="table table-striped table-bordered">
        <thead class="thead-dark" >
          <tr>
            <th>Name</th>
              
            <th>Email</th>
            <th>Phone</th>
            <th>Twitter</th>
            <th>User Id</th>
            <th colspan="2">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
            <tr>
              <td>        
                <%= link_to student.first_name + ' ' + student.last_name, student %>
              </td>
              <td> <%= student.email %> </td> 
              <td> <%= student.phone %> </td> 
              <td> <%= student.twitter %> </td>
              <td> <%= student.user_id %> </td>
              
              <% if student.user == current_user %>
              <!--<td><%= link_to 'Edit', edit_student_path(student) %></td>-->
              <td><%= button_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger btn-sm' %></td>   
                <!--<%= link_to 'Delete this student', student, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %>
                <td></td>
                <td></td>-->
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
  <br> 

  <p>
    <%= link_to "New student", new_student_path, class:"btn btn-secondary" %>
    <!--<button type="button" class="btn btn-secondary">
    Secondary
    </button>-->
  </p>
  <% else %>

  <h1>Hello Test</h1>
    my first Rails Web page.....!
  <% end %>

</div>